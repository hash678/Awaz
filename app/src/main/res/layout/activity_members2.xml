<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrand"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context="com.abbasi.awaz.chat.Members">

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="Members"
        android:textAlignment="center"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:id="@+id/listofmembers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/adduser"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="15dp" />

    <ImageView
        android:id="@+id/adduser"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/listofmembers"
        android:layout_alignRight="@+id/listofmembers"
        android:layout_alignTop="@+id/textView13"
        android:layout_marginRight="2dp"
        app:srcCompat="@drawable/addperson" />

</RelativeLayout>
