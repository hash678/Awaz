<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:id="@+id/linearlayout"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:onClick="clicked"
        android:background="@drawable/loginback"><![CDATA[

        ImageView
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:id="@+id/imageView"
        android:src="@drawable/note"
        android:layout_gravity="right"
        android:layout_marginRight="70dp"
        android:onClick="clicked" />







        ]]>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/logologin"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/awaz"
            android:layout_marginTop="40dp" />

        <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/usernameF"
        android:drawableLeft="@drawable/ic_username"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="email"
            android:inputType="textEmailAddress"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:layout_marginTop="70dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:drawableLeft="@drawable/ic_pwd"
        android:hint="password"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="30dp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log in "
        android:id="@+id/button"
        android:layout_gravity="center_horizontal"
        android:onClick="signIn"
        android:background="#00ffffff"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:id="@+id/chnageSignupMode"
        android:layout_gravity="center_horizontal"
        android:onClick="changeSignUpMode"
        android:textSize="15dp"
        android:textColor="#f9f9fa" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Can&apos;t login?"
            android:id="@+id/textView6"
            android:layout_gravity="center_horizontal"
            android:onClick="reset"
            android:textSize="13dp"
            android:textColor="#f9f9fa"
            android:textIsSelectable="false"
            android:layout_marginTop="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView5"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</RelativeLayout>