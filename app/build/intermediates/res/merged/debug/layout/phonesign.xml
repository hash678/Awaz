<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/phonebackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:saveEnabled="false">


    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/textphone"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView11"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"
        android:text="Don't be shy, sign in and join the family!" />

    <EditText
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/sign_in_button"
        android:layout_gravity="center"
        android:layout_toStartOf="@+id/sign_in_button"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Your digits please"
        android:inputType="phone"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:layout_toLeftOf="@+id/sign_in_button" />

    <Button
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@color/image_border_end"
        android:text="Verify"
        android:textColor="#ffffff"
        android:layout_below="@+id/phonelogo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/phonelogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignTop="@+id/textView9"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="33dp"
        android:layout_weight="1"
        android:src="@drawable/awaz" />

    <EditText
        android:id="@+id/code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/NEXT"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:ems="10"
        android:enabled="false"
        android:hint="Code"
        android:inputType="phone"
        android:textAlignment="center"
        android:visibility="invisible" />

    <Button
        android:id="@+id/NEXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/timer"
        android:layout_gravity="center"
        android:layout_marginTop="31dp"
        android:layout_weight="1"
        android:background="@color/image_border_end"
        android:enabled="false"
        android:onClick="verify"
        android:text="NEXT"
        android:textColor="#ffffff"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/number"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:capitalize="characters"
        android:text="TextView"
        android:textSize="24dp"
        android:textStyle="bold"
        android:visibility="invisible"
        tools:text="Try again in: " />

</RelativeLayout>